%YAML 1.2
---
Application:
  license_key: <%= @license_key %>
  wake_interval: 60

<% if @include_memcached -%>
  memcached:
    name: <%= @hostname %>
    host: 127.0.0.1
    port: 11211
<% end -%>

<% if @include_nginx -%>
  nginx:
    name: <%= @hostname %>
    scheme: http
    host: localhost
    port: 80
    verify_ssl_cert: false
    path: /nginx_stub_status
<% end -%>

<% if @include_mongodb -%>
  mongodb:
    name: <%= @hostname %>
    host: localhost
    port: 27017
    admin_username: <%= @mongodb_admin.keys[0] %>
    admin_password: <%= @mongodb_admin.values[0] %>
    #ssl: False
    #ssl_keyfile: /path/to/keyfile
    #ssl_certfile: /path/to/certfile
    #ssl_cert_reqs: 0  # Should be 0 for ssl.CERT_NONE, 1 for ssl.CERT_OPTIONAL, 2 for ssl.CERT_REQUIRED
    #ssl_ca_certs: /path/to/cacerts file
    databases:
  <% @mongodb_dbs.each do |db,value| -%>
      <%= db %>:
        username: <%= value.keys[0] %>
        password: <%= value.values[0] %>
  <% end -%>
<% end -%>

<% if @include_php_fpm -%>
  php_fpm:
  <% @php_fpm_pool.each do |pool,value| -%>
    - name: <%= value[:name] %>
      scheme: http
      host: localhost
      port: 80
      path: <%= value[:path] %>
      query: json
  <% end -%>
<% end -%>

Daemon:
  user: <%= @user %>
  pidfile: /var/run/newrelic/newrelic-plugin-agent.pid

Logging:
  formatters:
    verbose:
      format: '%(levelname) -10s %(asctime)s %(process)-6d %(processName) -15s %(threadName)-10s %(name) -45s %(funcName) -25s L%(lineno)-6d: %(message)s'
  handlers:
    file:
      class : logging.handlers.RotatingFileHandler
      formatter: verbose
      filename: <%= @log_path %>/newrelic-plugin-agent.log
      maxBytes: 10485760
      backupCount: 3
  loggers:
    newrelic_plugin_agent:
      level: INFO
      propagate: True
      handlers: [console, file]
    requests:
      level: ERROR
      propagate: True
      handlers: [console, file]
